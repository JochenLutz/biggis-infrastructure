<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>BigGIS Raster Pipeline</display-name>

	<servlet>
		<servlet-name>PushServletSSEExample</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>biggis.api</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.classnames</param-name>
			<param-value>util.ObjectMapperProviderFast</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>javax.ws.rs.container.ContainerRequestFilter</param-name>
			<param-value>filter.CookiesRequest</param-value>
		</init-param>
		<load-on-startup>7</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>


	<servlet-mapping>
		<servlet-name>PushServletSSEExample</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
</web-app>